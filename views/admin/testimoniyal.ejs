<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin dashbored</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="/admin/css/dash.css">
</head>
<body>
    <%-include('../../partails/admin/header.ejs')%>
    <section id="mid">
        <div class="inner-mid">
            <%-include('../../partails/admin/left.ejs')%>
            <div class="right">

                <table class="table table-hover">
                    <tr>
                        <th>Total Services : <%=total%></th>
                        <th>Services Showing : <%=public%></th>
                        <th>Services Hiding : <%=unpublic%></th>
                    </tr>
                </table>

                <h2>
                    Testimoniyal managemant
                </h2>
                <br>

                <form action="/admin/findtesti" method="post">
                    <select name="search" id="" class="form-select">
                        <option value="hide">hide</option>
                        <option value="show">show</option>
                    </select>
                    <input type="submit" value="search" style="width: 100%;padding: 10px;">
                </form>

                <table class="table table-hover">
                    <tr>
                        <th>Sno.</th>
                        <th>Title</th>
                        <th>Img</th>
                        <th>Des</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                    <%record.forEach((result,key)=>{%>
                        <tr>
                            <td><%=key+1%></td>
                            <td><%=result.title%></td>
                            <td><img src="upload/<%=result.img%>" style="width:100px;" alt=""></td>
                            <td><%=result.des%></td>
                           <% if(result.status=='show'){%>
                                <td><a href="/admin/testistatus/<%=result.id%>" style="width: auto;"><%=result.status%></a></td>
                           <% }else{%>
                                <td><a href="/admin/testistatus/<%=result.id%>" style="width: auto;background: yellowgreen;"><%=result.status%></a></td>
                           <% }%>
                            <td><a href="/admin/testidelete/<%=result.id%>" style="width: auto;">Delete</a></td>
                        </tr>
                    <%})%>
                </table>
            </div>
        </div>
    </section>
    <%-include('../../partails/admin/footer.ejs')%>
    
</body>
</html>