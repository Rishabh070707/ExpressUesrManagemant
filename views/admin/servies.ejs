<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin dashbored</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="/admin/css/dash.css">
</head>
<body>
    <%-include('../../partails/admin/header.ejs')%>
    <section id="mid">
        <div class="inner-mid">
            <%-include('../../partails/admin/left.ejs')%>
            <div class="right">
                <h2>
                    Services managemant
                </h2>
                <table class="table table-hover">
                    <tr>
                        <th>Total Services : <%=total%></th>
                        <th>Services public : <%=public%></th>
                        <th>Services unpublic : <%=unpublic%></th>
                    </tr>
                </table>
                <form action="/admin/find" method="post">
                    <select name="search" id="" class="form-select">
                        <option value="public">public</option>
                        <option value="unpublic">unpublic</option>
                    </select>
                    <input type="submit" value="search" style="width: 100%;padding: 10px;">
                </form>
                <a href="/admin/addservices" style="width: 100%;margin: 20px 0 0 0;">Add Services</a>
                <table class="table table-hover">
                    <tr>
                        <th>Sno.</th>
                        <th>Img</th>
                        <th>title</th>
                        <th>des</th>
                        <th>long des</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                    <%record.forEach((result,key)=>{%>
                        <tr>
                            <td><%=key+1%></td>
                            <td><img src="/admin/upload/<%=result.img%>" style="width:100px" alt=""></td>
                            <td><%=result.title%></td>
                            <td><%=result.des%></td>
                            <td><%=result.ldes%></td>
                            <%if(result.status=='unpublic'){%>
                                <td><a href="/admin/sevicestatus/<%=result.id%>" style="width: auto;background: yellowgreen;"><%=result.status%></a></td>
                           <% }else{%>
                            <td><a href="/admin/sevicestatus/<%=result.id%>" style="width: auto;background: yellow;"><%=result.status%></a></td>
                           <%}%>
                            <td><a href="/admin/sevicedelete/<%=result.id%>" style="width: auto;">Delete</a></td>
                        </tr>
                    <%})%>
                </table>
            </div>
        </div>
    </section>
    <%-include('../../partails/admin/footer.ejs')%>
    
</body>
</html>