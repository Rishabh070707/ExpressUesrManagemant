<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Ms+Madi&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="/frontend/css/style.css">
</head>

<body>
  <!--Header start from here-->
  
  <%-include('../../partails/frontend/header.ejs')%>
   <!--Header end here-->
  <section id="banner">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h4><%=Bannerrecord.title%></h4>
          <p><%=Bannerrecord.des%></p>
          <a href="/ldes"><button class="btn btn-success">More details</button></a>
        </div>
        <div class="col-md-6"><img src="/admin/upload/<%=Bannerrecord.img%>" alt="" class="img-fluid mx-auto d-block" id="img-banner"></div>
      </div>
    </div>
    <img src="media/border1.png" alt="">
  </section>
  <section id="services">
    <div class="container pb-3">
      <div class="row">
        <h2>Services</h2>
        <%Servicerecord.forEach((result)=>{%>
          <div class="col-md-3"><div class="card">
            <img src="/admin/upload/<%=result.img%>" class="card-img-top img-fluid" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%=result.title%></h5>
              <p class="card-text"><%=result.des%></p>
              <a href="/ldes" class="btn btn-primary">More Deatils</a>
            </div>
          </div></div>
        <%})%>
      </div>
    </div>
  </section>
  <section id="testi">
    <div class="container pt-3 pb-3">
      <div class="row">
        <h2>Testinominals</h2>
        <%Testierecord.forEach((result)=>{%>
          <div class="col-md-3">
            <img src="/admin/upload/<%=result.img%>" style="width: 150px;" alt="">
            <p><span><i class="bi bi-quote"></i></span><%=result.des%><i class="bi bi-quote"></i></p>
            <p><%=result.title%></p>
          </div>
        <%})%>
      </div>
    </div>
  </section>
  <%-include('../../partails/frontend/footer.ejs')%>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
</body>

</html>